- model_class = Faculty
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @faculty.name

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @faculty.description.html_safe

= link_to t('.back', :default => t("helpers.links.back")), university_faculties_path(@university), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_university_faculty_path(@university, @faculty), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), university_faculty_path(@university, @faculty), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
