- model_class = Faculty
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @faculties.each do |faculty|
      %tr
        %td= link_to faculty.name, faculty_path(faculty)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_faculty_path(faculty), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), faculty_path(faculty), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_faculty_path, :class => 'btn btn-primary'
