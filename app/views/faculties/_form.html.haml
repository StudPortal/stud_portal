= form_for [@university, @faculty], html: { class: "form form-horizontal faculty" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@faculty[:name])
  .form-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area  :description, class: 'form-control wysihtml5', required: true
    = error_span(@faculty[:description])    
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), university_faculties_path(@university), :class => 'btn btn-default'
