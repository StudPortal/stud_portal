- model_class = Lector
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @lector.name
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @lector.position

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @lector.description.html_safe

= link_to t('.back', :default => t("helpers.links.back")), university_faculty_department_lectors_path(@university, @faculty, @department), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_university_faculty_department_lector_path(@university, @faculty, @department, @lector), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), university_faculty_department_lector_path(@university, @faculty, @department, @lector), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
