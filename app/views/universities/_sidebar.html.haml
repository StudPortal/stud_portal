.sidebar
  = nav_pills do
    = nav_pill 'Main info', university_path(@university)
    = nav_pill 'Address',   address_university_path(@university)
    = nav_pill 'Units',     units_university_path(@university)
    = nav_pill 'Lectors',   lectors_university_path(@university)
    = nav_pill 'Raiting',   raiting_university_path(@university)

  %center.social
    = social_share_button_tag @university.name, url: university_path(@university)

  - if user_signed_in?
    %ul.nav.nav-pills.university_actions
      %li= link_to t('.back', :default => t("helpers.links.back")), universities_path, :class => 'btn btn-default'
      %li= link_to t('.edit', :default => t("helpers.links.edit")), edit_university_path(@university), :class => 'btn btn-default'
      %li= link_to t('.destroy', :default => t("helpers.links.destroy")), university_path(@university), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
