- model_class = University
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @university.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @university.address
%p
  %strong Coordinates:
  %br [#{@university.coordinates.first}, #{@university.coordinates.last}]

%div{:style => "width: 800px;"}
  #map{:style => "width: 800px; height: 400px;"}

%br
= link_to t('.back', :default => t("helpers.links.back")), universities_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_university_path(@university), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), university_path(@university), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

:javascript
  function initialize() {
    var myLatlng = new google.maps.LatLng(#{@university.coordinates.first},#{@university.coordinates.last});
    var mapOptions = {
      zoom: 4,
      center: myLatlng
    }
    var map = new google.maps.Map(document.getElementById('map'), mapOptions);

    var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: #{@university.name}
    });
  }

  google.maps.event.addDomListener(window, 'load', initialize);
