.page-header
  %h3 #{@university.name}
.row
  .col-md-6
    Address: 
    %strong #{@university.address}
  .col-md-6
    %small ( [#{@university.coordinates.first}, #{@university.coordinates.last}] )
%br  
.row
  .col-md-12
    .panel.panel-default.map_panel
      .panel-body
        #map
.row
  .col-md-4
    = link_to t('.back', :default => t("helpers.links.back")), universities_path, :class => 'btn btn-default'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_university_path(@university), :class => 'btn btn-default'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), university_path(@university), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  .col-md-8
    = social_share_button_tag @university.name, url: university_path(@university)
    
:javascript
  function initialize() {
    var myLatlng = new google.maps.LatLng(#{@university.coordinates.last},#{@university.coordinates.first});
    var mapOptions = {
      zoom: 4,
      center: myLatlng
    }
    var map = new google.maps.Map(document.getElementById('map'), mapOptions);

    var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: '#{@university.name}'
    });
  }

  google.maps.event.addDomListener(window, 'load', initialize);
  
