- model_class = University
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th.hidden-sm= model_class.human_attribute_name(:adress)
      -#%th= model_class.human_attribute_name(:lat)
      -#%th= model_class.human_attribute_name(:lng)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @universities.each do |university|
      %tr
        %td= link_to university.name, university_path(university)
        %td.hidden-sm= university.adress
        -#%td= university.lat
        -#%td= university.lng
        %td
          - if user_signed_in?
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_university_path(university), :class => 'btn btn-primary btn-xs'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), university_path(university), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
            = link_to 'Add faculty', new_university_faculty_path(university), :class => 'btn btn-info btn-xs'
          = link_to 'Faculties', university_faculties_path(university), :class => 'btn btn-success btn-xs'

- if user_signed_in?
  = link_to t('.new', :default => t("helpers.links.new")), new_university_path, :class => 'btn btn-primary'
