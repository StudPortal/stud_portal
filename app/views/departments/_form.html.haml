= form_for [@university, @faculty, @department], html: { class: "form form-horizontal department" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@department[:name])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), university_faculty_departments_path(@university, @faculty), :class => 'btn btn-default'
